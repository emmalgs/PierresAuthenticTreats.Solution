@{
  Layout = "_Layout";
}

@using PierresAuthenticTreats.ViewModels
@model RegisterViewModel

<h2>New User Account</h2>
<hr/ >

@if (!ViewData.ModelState.IsValid)
{
  @Html.ValidationSummary("Please fix the following error(s) before resubmitting:")
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  @Html.LabelFor(u => u.UserName)
  @Html.TextBoxFor(u => u.UserName)

  @Html.LabelFor(u => u.Email)
  @Html.TextBoxFor(u => u.Email)

  @Html.LabelFor(u => u.Password)
  @Html.EditorFor(u => u.Password)

  @Html.LabelFor(u => u.ConfirmPassword)
  @Html.EditorFor(u => u.ConfirmPassword)

  <input type="submit" value="Register" />
}

