<div id="nav">
  @Html.ActionLink("Home", "Index", "Account", null, new { @class="btn" })
  @Html.ActionLink("Treats", "Index", "Treats", null, new { @class="btn" })
  @Html.ActionLink("Flavors", "Index", "Flavors", null, new { @class="btn" })

  @if (User.Identity.IsAuthenticated)
  {
      @using (Html.BeginForm("Logoff", "Account"))
      {
        <input type="submit" class="btn" value="Log out" />
      }
  }
  else
  {
    @Html.ActionLink("Login", "Login", "Account", null, new { @class="btn" })
  }
</div>