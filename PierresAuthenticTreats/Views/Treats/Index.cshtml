@{
  Layout = "_Layout";
}

@using PierresAuthenticTreats.Models

<h2>Treats for @User.Identity.Name</h2>

@if (Model.Count == 0)
{
  <p>No treats created yet, please create a treat!</p>
}
else
{
  @foreach (Treat treat in Model)
  {
    <p>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId }) | @Html.ActionLink("Delete", "Delete", new { id = treat.TreatId }, new { @class="btn btn-danger"})</p>
  }
}

@Html.ActionLink("Create Treat", "Create")